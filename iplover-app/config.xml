<?xml version='1.0' encoding='utf-8'?>
<widget id="gov.usgs.cida.iplover" version="2.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iPlover</name>
    <description>
        A iPlover nesting collection application
    </description>
    <author email="lwinslow@usgs.gov" href="http://cida.usgs.gov">
        Luke Winslow [dev], USGS [org]
    </author>
    <icon src="www/img/ios7/apple-touch-icon-152x152.png" />
    <content src="index.html" />
    <access origin="*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#2A2A2A" />
    
    <preference name="SplashScreen" value="iplover_splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    
    <preference name="FadeSplashScreen" value="true" />
	<preference name="fade-splash-screen-duration" value="5" />
	<preference name="auto-hide-splash-screen" value="false" />
	<preference name="AutoHideSplashScreen" value="false" />
    
    <platform name="ios">
        <!-- Currently just use one size for this. I'm not proud of this -->
        <splash src="www/img/iplover_splash.png" width="320" height="480"/>
        <splash src="www/img/iplover_splash.png" width="640" height="960"/>
        <splash src="www/img/iplover_splash.png" width="768" height="1024"/>
        <splash src="www/img/iplover_splash.png" width="1536" height="2048"/>
        <splash src="www/img/iplover_splash.png" width="1024" height="768"/>
        <splash src="www/img/iplover_splash.png" width="2048" height="1536"/>
        <splash src="www/img/iplover_splash.png" width="640" height="1136"/>
        <splash src="www/img/iplover_splash.png" width="750" height="1334"/>
        <splash src="www/img/iplover_splash.png" width="1242" height="2208"/>
        <splash src="www/img/iplover_splash.png" width="2208" height="1242"/>
        
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/ios7/apple-touch-icon-180x180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/ios7/apple-touch-icon-60x60.png" width="60" height="60" />
        <icon src="www/img/ios7/apple-touch-icon-120x120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/ios7/apple-touch-icon-76x76.png" width="76" height="76" />
        <icon src="www/img/ios7/apple-touch-icon-152x152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/img/ios7/apple-touch-icon-80x80.png" width="40" height="40" />
        <icon src="www/img/ios7/apple-touch-icon-80x80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="57" height="57" />
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="72" height="72" />
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="29" height="29" />
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="50" height="50" />
        <icon src="www/img/ios7/apple-touch-icon-1024x1024.png" width="100" height="100" />
    </platform>
    
</widget>
